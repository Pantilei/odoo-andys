<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="departaments_reports_wizard_view_form" model="ir.ui.view">
            <field name="name">departaments_reports_wizard.view.form</field>
            <field name="model">restaurant_management.departaments_reports_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="report" required="1" />
                    </group>
                    <group>
                        <field name="check_list_category_ids" options="{'no_create': True}" widget="many2many_tags" />
                        <field name="restaurant_network_ids" options="{'no_create': True}" widget="many2many_tags" />
                    </group>
                    <group string="Date of report" attrs="{'invisible': [('report', 'not in', ['top_faults', 'restaurant_rating'])]}">
                        <field name="year" required="1" />
                        <field name="month" required="1" />
                    </group>
                    <group string="Date range for dynamics" attrs="{'invisible': [('report', '!=', 'fault_count_dynamics')]}">
                        <group>
                            <field name="year_start" required="1" />
                            <field name="month_start" required="1" />
                        </group>
                        <group>
                            <field name="year_end" required="1" />
                            <field name="month_end" required="1" />
                        </group>
                    </group>
                    <div class="d-flex justify-content-center w-100">
                        <field name="json_chart" widget="json_to_chart" attrs="{'invisible': [('report', '!=', 'fault_count_dynamics')]}" />
                        <field name="json_top_faults" widget="json_to_top_faults" attrs="{'invisible': [('report', '!=', 'top_faults')]}" />
                        <field name="json_restaurant_rating" widget="json_to_restaurant_rating" attrs="{'invisible': [('report', '!=', 'restaurant_rating')]}" />
                    </div>
                </form>
            </field>
        </record>

        <record id="departaments_reports_wizard_action" model="ir.actions.act_window">
            <field name="name">Departaments Reports</field>
            <field name="res_model">restaurant_management.departaments_reports_wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">inline</field>
        </record>

    </data>
</odoo>