<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="all_restaurants_report_wizard_view_form" model="ir.ui.view">
            <field name="name">all_restaurants_report_wizard.view.form</field>
            <field name="model">restaurant_management.all_restaurants_report_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="report" />
                    </group>
                    <group>
                        <field name="check_list_category_ids" options="{'no_create': True}" widget="many2many_tags" />
                        <field name="restaurant_network_ids" options="{'no_create': True}" widget="many2many_tags" />
                    </group>
                    <group string="Date of report" attrs="{'invisible': [('report', 'not in', ['relative_faults_distribution'])]}">
                        <field name="year" required="1" />
                        <field name="month" required="1" />
                    </group>
                    <group string="Date range for dynamics">
                        <group>
                            <field name="year_start" required="1" />
                            <field name="month_start" required="1" />
                        </group>
                        <group>
                            <field name="year_end" required="1" />
                            <field name="month_end" required="1" />
                        </group>
                    </group>
                    <div class="d-flex justify-content-center w-100" attrs="{'invisible': [('report', 'not in', ['fault_count_dynamics'])]}">
                        <field name="dynamics_of_faults_json" widget="json_to_chart" />
                    </div>
                    <div class="container" style="margin: 0 auto;" attrs="{'invisible': [('report', 'not in', ['relative_faults_distribution'])]}">
                        <div class="row">
                            <div class="col-6">
                                <field name="relative_faults_distribution_month_range_json" widget="json_to_pie_chart" />
                            </div>
                            <div class="col-6">
                                <field name="relative_faults_distribution_one_month_json" widget="json_to_pie_chart" />
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="all_restaurants_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Company Reports</field>
            <field name="res_model">restaurant_management.all_restaurants_report_wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">inline</field>
        </record>

    </data>
</odoo>