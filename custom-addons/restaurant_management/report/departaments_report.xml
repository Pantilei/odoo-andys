<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="action_departaments_report" model="ir.actions.report">
            <field name="name">Departaments Report</field>
            <field name="model">restaurant_management.reports_wizard</field>
            <field name="report_type">qweb-pdf</field>
            <!-- <field name="report_type">qweb-html qweb-pdf</field> -->
            <field name="report_name">restaurant_management.departaments_report</field>
            <field name="report_file">restaurant_management.departaments_report</field>
            <field name="print_report_name">'Report'</field>
            <field name="paperformat_id" ref="report_paper_format" />
        </record>

        <template id="departaments_report">
            <t t-call="web.html_container">
                <t t-call="restaurant_management.layout_of_report">
                    <style>
                        .title {
                            font-size: 26px; 
                            font-style: italic;
                        }

                        .date_font {
                            font-size: 20px; 
                            font-style: italic;
                        }

                        .section {
                            font-size: 24px; 
                            font-style: italic;
                        }

                        .table_header {
                            font-size: 14px;
                        }

                        .table_title {
                            font-size: 18px;
                            font-style: italic;
                        }
                    </style>
                    <div class="page">
                        <div class="row">
                            <h2 class="col-10 title">
                                Отчет по ошибкам по депортаменту
                                <t t-esc="check_list_category_name" />
                                .
                            </h2>
                            <h3 class="col-2 date_font">
                                <t t-esc="report_date" />
                            </h3>
                        </div>

                        <div class="row mt-3">
                            <h4 class="col-12 mt-3 section">
                                1. Динамика кол-ва ошибок по
                                <t t-esc="check_list_category_name" />
                                .
                            </h4>
                        </div>
                        <div class="row">
                            <img class="col-12" t-attf-src="data:image/png;base64,{{dynamics_of_faults_png}}" />
                        </div>

                        <p style="page-break-before:always;"></p>

                        <div class="row mt-3 ">
                            <h4 class="col-12 section">
                                Рейтинг ресторанов по компании.
                            </h4>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <h3 class="col-12 table_title">
                                        <t t-esc="check_list_category_name" />
                                    </h3>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th class="table_header" scope="col">
                                                        Ресторан
                                                    </th>
                                                    <th class="table_header" scope="col">
                                                        Кол-во ошибок
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="restaurant_rating" t-as="row">
                                                    <tr>
                                                        <t t-foreach="row" t-as="cell" t-key="cell_index">
                                                            <td t-att-class="'font-weight-bold' if cell_index == (len(row)-1) else ''">
                                                                <t t-esc="cell" />
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </t>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row">
                                    <h3 class="col-12 table_title">
                                        <t t-esc="check_list_category_name" />
                                        / 1 проверка
                                    </h3>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th class="table_header" scope="col">Ресторан</th>
                                                    <th class="table_header" scope="col">
                                                        Кол-во ошибок
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="restaurant_rating_per_audit" t-as="row" t-key="row_index">
                                                    <tr>
                                                        <t t-foreach="row" t-as="cell" t-key="cell_index">
                                                            <td t-att-class="'font-weight-bold' if cell_index == (len(row)-1) else ''">
                                                                <t t-esc="cell" />
                                                            </td>
                                                        </t>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>

                            </div>
                        </div>

                        <p style="page-break-before:always;"></p>

                        <div class="row">
                            <div class="col-12">
                                <h4 class="mt-5 section">3. Топ ошибок по департаменту</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th class="table_header">
                                                <t t-esc="check_list_category_name" />
                                            </th>
                                            <th class="table_header">
                                                Кол-во ошибок
                                           </th>
                                            <th class="table_header">
                                                Принятые меры директора ресторана
                                           </th>
                                            <th class="table_header">
                                                Принятые меры ответственного по департаменту
                                           </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="top_faults_with_comments" t-as="top_fault">
                                            <tr>
                                                <td>
                                                    <t t-esc="top_fault[1]" />
                                                </td>
                                                <td>
                                                    <t t-esc="top_fault[2]" />
                                                </td>
                                                <td>
                                                    <t t-raw="top_fault[3]" />
                                                </td>
                                                <td>
                                                    <t t-raw="top_fault[4]" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <p style="page-break-before:always;"></p>
                    </div>
                </t>
            </t>

        </template>
    </data>
</odoo>