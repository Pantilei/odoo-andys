<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="action_departaments_report" model="ir.actions.report">
            <field name="name">Departaments Report</field>
            <field name="model">restaurant_management.reports_wizard</field>
            <field name="report_type">qweb-pdf</field>
            <!-- <field name="report_type">qweb-html qweb-pdf</field> -->
            <field name="report_name">restaurant_management.departaments_report</field>
            <field name="report_file">restaurant_management.departaments_report</field>
            <field name="print_report_name">'Report'</field>
            <field name="paperformat_id" ref="report_paper_format" />
        </record>

        <template id="departaments_report">
            <t t-call="web.html_container">
                <div class="header">
                    <div class="row ml-5 p-0">
                        <div class="col-9 p-0 report-header_title">
                            Отчет по ошибкам по департаменту
                            <t t-esc="check_list_category_name" />
                            .
                        </div>
                        <div class="col-3">
                            <img class="ml-auto" style="width: 70px;" src="/restaurant_management/static/src/img/andys_logo.jpg" alt="Andy's Logo" />
                            <img class="ml-1" style="width: 70px;" src="/restaurant_management/static/src/img/la_placinte_logo.jpg" alt="La Placinte Logo" />
                        </div>
                    </div>
                    <div class="row zero_min_height">
                        <div class="col-12 p-0">
                            <div style="border-bottom: 3px solid #CF431A;" />
                        </div>
                    </div>
                </div>

                <div class="article">
                    <div class="page">
                        <div class="container ml-5 mr-5">
                            <div class="row mt-1">
                                <p class="col-2 p-0 report-date">
                                    <t t-esc="report_date" />
                                </p>
                                <div class="col-10"></div>
                            </div>

                            <div class="row">
                                <h4 class="col-12 p-0 section">
                                    1. Динамика кол-ва ошибок по
                                    <t t-esc="check_list_category_name" />
                                    .
                                </h4>
                            </div>
                            <div class="row">
                                <img class="col-12" t-attf-src="data:image/png;base64,{{dynamics_of_faults_png}}" />
                            </div>

                            <p style="page-break-before:always;"></p>

                            <div class="row">
                                <h4 class="col-12 p-0 section">
                                    2. Рейтинг ресторанов компании.
                                </h4>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="row">
                                        <h3 class="col-12 table_title">
                                            <t t-esc="check_list_category_name" />
                                        </h3>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th class="table_header" scope="col">
                                                        Ресторан
                                                    </th>
                                                        <th class="table_header" scope="col">
                                                        Кол-во ошибок
                                                    </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="restaurant_rating" t-as="row">
                                                        <tr>
                                                            <t t-foreach="row[1:]" t-as="cell" t-key="cell_index">
                                                                <td t-att-class="'font-weight-bold' if cell_index == (len(row)-1) else ''">
                                                                    <t t-esc="cell" />
                                                                </td>
                                                            </t>
                                                        </tr>
                                                    </t>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="row">
                                        <h3 class="col-12 table_title">
                                            <t t-esc="check_list_category_name" />
                                            / 1 проверка
                                        </h3>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th class="table_header" scope="col">Ресторан</th>
                                                        <th class="table_header" scope="col">
                                                        Кол-во ошибок
                                                    </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="restaurant_rating_per_audit" t-as="row" t-key="row_index">
                                                        <tr>
                                                            <t t-foreach="row[1:]" t-as="cell" t-key="cell_index">
                                                                <td t-att-class="'font-weight-bold' if cell_index == (len(row)-1) else ''">
                                                                    <t t-esc="cell" />
                                                                </td>
                                                            </t>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>

                                </div>
                            </div>

                            <p style="page-break-before:always;"></p>

                            <div class="row">
                                <div class="col-12">
                                    <h4 class="mt-5 section">3. Топ ошибок по департаменту</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th class="table_header">
                                                    <t t-esc="check_list_category_name" />
                                                </th>
                                                <th class="table_header">
                                                Кол-во ошибок
                                           </th>
                                                <th class="table_header">
                                                Принятые меры директора ресторана
                                           </th>
                                                <th class="table_header">
                                                Принятые меры ответственного по департаменту
                                           </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="top_faults_with_comments" t-as="top_fault">
                                                <tr>
                                                    <td>
                                                        <t t-esc="top_fault[1]" />
                                                    </td>
                                                    <td>
                                                        <t t-esc="top_fault[2]" />
                                                    </td>
                                                    <td>
                                                        <t t-raw="top_fault[3]" />
                                                    </td>
                                                    <td>
                                                        <t t-raw="top_fault[4]" />
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <p style="page-break-before:always;"></p>
                        </div>
                    </div>
                </div>
            </t>

        </template>
    </data>
</odoo>