<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="action_restaurants_all_report" model="ir.actions.report">
            <field name="name">General Report</field>
            <field name="model">restaurant_management.reports_wizard</field>
            <field name="report_type">qweb-pdf</field>
            <!-- <field name="report_type">qweb-html qweb-pdf</field> -->
            <field name="report_name">restaurant_management.restaurants_all_report</field>
            <field name="report_file">restaurant_management.restaurants_all_report</field>
            <field name="print_report_name">'Report'</field>
            <field name="paperformat_id" ref="report_paper_format" />
        </record>

        <template id="restaurants_all_report">
            <t t-call="web.html_container">
                <t t-call="restaurant_management.layout_of_report">
                    <style>
                        .title {
                            font-size: 26px; 
                            font-style: italic;
                        }

                        .date_font {
                            font-size: 20px; 
                            font-style: italic;
                        }

                        .section {
                            font-size: 24px; 
                            font-style: italic;
                        }

                        .table_header {
                            font-size: 14px;
                        }
                    </style>
                    <div class="page">
                        <div class="row">
                            <h2 class="col-10 title">
                                Общий отчет по проверкам ресторанов за месяц
                            </h2>
                            <h3 class="col-2 date_font">
                                <t t-esc="report_date" />
                            </h3>
                        </div>
                        <div class="row mt-5">
                            <h4 class="col-12 section">1. Количество проверок</h4>
                        </div>
                        <div class="row">
                            <table class="col-12 table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col"></th>
                                        <t t-foreach="months" t-as="month">
                                            <th class="table_header" scope="col">
                                                <t t-esc="month" />
                                            </th>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th class="table_header" scope="row">Плановое</th>
                                        <t t-foreach="counts_per_month['planned']" t-as="countPlanned">
                                            <td>
                                                <t t-esc="countPlanned" />
                                            </td>
                                        </t>
                                    </tr>
                                    <tr>
                                        <th class="table_header" scope="row">Фактическое</th>
                                        <t t-foreach="counts_per_month['actual']" t-as="countActual">
                                            <td>
                                                <t t-esc="countActual" />
                                            </td>
                                        </t>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row mt-3">
                            <h4 class="col-12 section">2. Динамика общего кол-ва ошибок.</h4>
                        </div>
                        <div class="row">
                            <img class="col-12" t-attf-src="data:image/png;base64,{{dynamics_of_faults_png}}" />
                        </div>

                        <p style="page-break-before:always;"></p>

                        <t t-foreach="fault_category_data" t-as="fault_category">
                            <div class="row mt-3">
                                <h4 class="col-12 section">
                                    <t t-esc="fault_category_index + 3" />
                                    . Динамика кол-ва ошибок по
                                    <t t-esc="fault_category[0]" />
                                    .
                                </h4>
                            </div>
                            <div class="row">
                                <img class="col-12" t-attf-src="data:image/png;base64,{{fault_category[1]}}" />
                            </div>

                            <t t-if="(fault_category_index + 1) % 2 == 0">
                                <p style="page-break-before:always;"></p>
                            </t>
                        </t>

                        <p style="page-break-before:always;"></p>

                        <div class="row mt-3">
                            <h4 class="col-12 section">
                                <t t-esc="len(fault_category_data) + 3" />
                                . Рейтинг ресторанов по общему количеству ошибок.
                            </h4>
                        </div>
                        <div class="row">
                            <div class="col-12 row">
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th class="table_header" scope="col">Ресторан</th>
                                                        <th class="table_header" scope="col">
                                                            Кол-во ошибок
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="restaurant_rating" t-as="row">
                                                        <tr>
                                                            <t t-foreach="row[1:]" t-as="cell" t-key="cell_index">
                                                                <td t-att-class="'font-weight-bold' if cell_index == (len(row)-1) else ''">
                                                                    <t t-esc="cell" />
                                                                </td>
                                                            </t>
                                                        </tr>
                                                    </t>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-12">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th class="table_header" scope="col">Ресторан</th>
                                                        <th class="table_header" scope="col">
                                                            Кол-во ошибок/ед. проверки
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="restaurant_rating_per_audit" t-as="row" t-key="row_index">
                                                        <tr>
                                                            <t t-foreach="row[1:]" t-as="cell" t-key="cell_index">
                                                                <td t-att-class="'font-weight-bold' if cell_index == (len(row)-1) else ''">
                                                                    <t t-esc="cell" />
                                                                </td>
                                                            </t>
                                                        </tr>
                                                    </t>

                                                </tbody>
                                            </table>

                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>


                        <p style="page-break-before:always;"></p>
                    </div>
                </t>
            </t>

        </template>
    </data>
</odoo>