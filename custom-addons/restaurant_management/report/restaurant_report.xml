<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="action_restaurant_report" model="ir.actions.report">
            <field name="name">Restaurant Report</field>
            <field name="model">restaurant_management.reports_wizard</field>
            <field name="report_type">qweb-pdf</field>
            <!-- <field name="report_type">qweb-html qweb-pdf</field> -->
            <field name="report_name">restaurant_management.restaurant_report</field>
            <field name="report_file">restaurant_management.restaurant_report</field>
            <field name="print_report_name">'Report'</field>
            <field name="paperformat_id" ref="report_paper_format" />
        </record>

        <template id="restaurant_report">
            <t t-call="web.html_container">
                <t t-call="restaurant_management.layout_of_report">
                    <div class="page">
                        <div class="row">
                            <h2 class="col-10 font-italic">
                                Общий отчет по проверкам ресторана
                                <t t-esc="restaurant_name" />
                            </h2>
                            <h3 class="col-2 font_italic">
                                <t t-esc="report_date" />
                            </h3>
                        </div>
                        <div class="row mt-2">
                            <h4 class="col-12 mt-5">1. Количество проверок</h4>
                        </div>
                        <div class="row">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col"></th>
                                        <t t-foreach="months" t-as="month">
                                            <th scope="col">
                                                <t t-esc="month" />
                                            </th>
                                        </t>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">Плановое</th>
                                        <t t-foreach="counts_per_month['planned']" t-as="countPlanned">
                                            <td>
                                                <t t-esc="countPlanned" />
                                            </td>
                                        </t>
                                    </tr>
                                    <tr>
                                        <th scope="row">Фактическое</th>
                                        <t t-foreach="counts_per_month['actual']" t-as="countActual">
                                            <td>
                                                <t t-esc="countActual" />
                                            </td>
                                        </t>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row mt-2">
                            <h4 class="col-12">2. Движение ресторана по шкале рейтинга.</h4>
                        </div>
                        <div class="row">
                            <img class="col-12" t-attf-src="data:image/png;base64,{{dynamics_of_rating_png}}" />
                        </div>

                        <div class="row mt-2">
                            <h4 class="col-12">3. Относительное среднее значение ошибок.</h4>
                        </div>
                        <div class="row">
                            <img class="col-12" t-attf-src="data:image/png;base64,{{relative_fault_count_png}}" />
                        </div>

                        <p style="page-break-before:always;"></p>

                        <div class="row mt-2">
                            <h4 class="col-12">4. Топ 5 ошибок за месяц.</h4>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                Ошибки по чек листу
                                            </th>
                                            <th>
                                                Кол-во ошибок
                                           </th>
                                            <th>
                                                Принятые меры директора ресторана
                                           </th>
                                            <th>
                                                Принятые меры ответственного по департаменту
                                           </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="top_faults_with_comments" t-as="top_fault">
                                            <tr>
                                                <td>
                                                    <t t-esc="top_fault[1]" />
                                                </td>
                                                <td>
                                                    <t t-esc="top_fault[2]" />
                                                </td>
                                                <td>
                                                    <t t-raw="top_fault[3]" />
                                                </td>
                                                <td>
                                                    <t t-raw="top_fault[4]" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <p style="page-break-before:always;"></p>
                    </div>
                </t>
            </t>

        </template>
    </data>
</odoo>