<?xml version="1.0" encoding="utf-8"?>
<templates>

    <t t-name="JsonToRestaurantRating" owl="1">
        <div class="d-flex justify-content-center w-100">
            <table class="table table-striped w-50 m-2">
                <thead>
                    <tr>
                        <th scope="col">Restaurant</th>
                        <th scope="col">Fault Count</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="state.fieldValue['restaurant_rating']" t-as="line" t-key="line[0]">
                        <tr>
                            <td>
                                <t t-esc="line[1]" />
                            </td>
                            <td>
                                <t t-esc="line[2]" />
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <table class="table table-striped w-50 m-2">
                <thead>
                    <tr>
                        <th scope="col">Restaurant</th>
                        <th scope="col">Fault Count/1 Audit</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="state.fieldValue['restaurant_rating_per_audit']" t-as="line" t-key="line[0]">
                        <tr>
                            <td>
                                <t t-esc="line[1]" />
                            </td>
                            <td>
                                <t t-esc="line[2]" />
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>

</templates>