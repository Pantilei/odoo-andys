<odoo>
    <data>
        <record id="restaurant_audit_view_form" model="ir.ui.view">
            <field name="name">restaurant_audit.view.form</field>
            <field name="model">restaurant_management.restaurant_audit</field>
            <field name="arch" type="xml">
                <form string="Restaurant Audit">
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="restaurant_id" required="1" widget="selection" />
                        </group>
                        <group>
                            <field name="responsible_id" required="1" widget="many2one_avatar_user" />
                        </group>
                    </group>
                    <group string="Check time">
                        <field name="audit_date" />
                        <field name="audit_start_time" widget="float_time" />
                        <field name="audit_end_time" widget="float_time" />
                    </group>
                    <group string="Faults">
                        <field name="fault_registry_ids" nolabel="1" context="{'default_restaurant_id': restaurant_id, 'default_responsible_id': responsible_id}" style="table-layout: auto !important;">
                            <tree>
                                <field name="id" invisible="1" />
                                <field name="name" invisible="1" />
                                <field name="state" invisible="1" force_save="1" />
                                <field name="responsible_id" invisible="1" force_save="1" />
                                <field name="restaurant_id" invisible="1" force_save="1" />
                                <field name="fault_category_id" attrs="{'readonly': [('id', '!=', False)]}" />
                                <field name="fault_id" domain="[('category_id', '=', fault_category_id)]" attrs="{'readonly': [('id', '!=', False)]}" style="word-break: break-word; white-space: normal;" />
                                <field name="comment" style="word-break: break-word; white-space: normal;" />
                                <field name="state" widget="badge" decoration-danger="state == 'new'" decoration-success="state == 'confirm'" decoration-muted="state == 'cancel'" />
                            </tree>
                            <form>
                                <header>
                                    <button name="confirm" class="oe_highlight" type="object" string="Confirm" attrs="{'invisible': [('state', 'in', ['confirmed', 'cancel'])]}" groups="restaurant_management.group_restaurant_management_audit_controller" />
                                    <button name="cancel" type="object" string="Cancel" attrs="{'invisible': [('state', '=', ['confirmed', 'cancel'])]}" groups="restaurant_management.group_restaurant_management_audit_controller" />
                                    <field name="state" widget="statusbar" statusbar_visible="new,confirm" />
                                </header>
                                <sheet>
                                    <group>
                                        <field name="fault_category_id" widget="selection" />
                                    </group>
                                    <group>
                                        <field name="fault_id" widget="selection" domain="[('category_id', '=', fault_category_id)]" />
                                    </group>
                                    <group>
                                        <field name="comment" />
                                    </group>
                                    <group>
                                        <field name="director_comment" />
                                    </group>
                                    <group>
                                        <field name="attachment_ids" widget="many2many_binary_preview" accepted_file_extensions="image/*" />
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="restaurant_audit_view_inline_form" model="ir.ui.view">
            <field name="name">restaurant_audit.view.inline.form</field>
            <field name="model">restaurant_management.restaurant_audit</field>
            <field name="arch" type="xml">
                <form string="Restaurant Audit">
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="restaurant_id" required="1" widget="selection" />
                        </group>
                        <group>
                            <field name="responsible_id" required="1" />
                        </group>
                    </group>
                    <group>
                        <field name="audit_date" />
                        <field name="audit_start_time" widget="float_time" />
                        <field name="audit_end_time" widget="float_time" />
                    </group>
                    <group string="Faults">
                        <field name="fault_registry_ids" nolabel="1" context="{'default_restaurant_id': restaurant_id, 'default_responsible_id': responsible_id}" style="table-layout: auto !important;">
                            <tree>
                                <field name="id" invisible="1" />
                                <field name="name" invisible="1" />
                                <field name="state" invisible="1" force_save="1" />
                                <field name="responsible_id" invisible="1" force_save="1" />
                                <field name="restaurant_id" invisible="1" force_save="1" />
                                <field name="fault_category_id" attrs="{'readonly': [('id', '!=', False)]}" />
                                <field name="fault_id" domain="[('category_id', '=', fault_category_id)]" attrs="{'readonly': [('id', '!=', False)]}" style="word-break: break-word; white-space: normal;" />
                                <field name="comment" style="word-break: break-word; white-space: normal;" />
                            </tree>
                            <form>
                                <header>
                                    <button name="confirm" class="oe_highlight" type="object" string="Confirm" attrs="{'invisible': [('state', 'in', ['confirmed', 'cancel'])]}" groups="restaurant_management.group_restaurant_management_audit_controller" />
                                    <button name="cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ['confirmed', 'cancel'])]}" groups="restaurant_management.group_restaurant_management_audit_controller" />
                                    <field name="state" widget="statusbar" statusbar_visible="new,confirm" />
                                </header>
                                <sheet>
                                    <group>
                                        <field name="fault_category_id" widget="selection" />
                                    </group>
                                    <group>
                                        <field name="fault_id" widget="selection" domain="[('category_id', '=', fault_category_id)]" />
                                    </group>
                                    <group>
                                        <field name="comment" />
                                    </group>
                                    <group>
                                        <field name="director_comment" />
                                    </group>
                                    <group>
                                        <field name="attachment_ids" widget="many2many_binary_preview" accepted_file_extensions="image/*" />
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                    <footer>
                        <button string="Save" class="btn-primary" type="object" name="save_form_data" data-hotkey="v" />
                        <button string="Save&amp;Create New" class="btn-primary ml-1" type="object" name="save_and_create_new" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="restaurant_audit_tree_view" model="ir.ui.view">
            <field name="name">restaurant_audit.view.tree</field>
            <field name="model">restaurant_management.restaurant_audit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="restaurant_id" />
                    <field name="responsible_id" />
                    <field name="audit_date" />
                    <field name="audit_start_time" widget="float_time" />
                    <field name="audit_end_time" widget="float_time" />
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="restaurant_audit_action" model="ir.actions.act_window">
            <field name="name">Restaurant Audit</field>
            <field name="res_model">restaurant_management.restaurant_audit</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                          (0, 0, {'view_mode': 'tree', 'view_id': ref('restaurant_audit_tree_view')}),
                                          (0, 0, {'view_mode': 'form', 'view_id': ref('restaurant_audit_view_form')})]" />
        </record>

        <record id="restaurant_audit_inline_form_action" model="ir.actions.act_window">
            <field name="name">Restaurant Audit</field>
            <field name="res_model">restaurant_management.restaurant_audit</field>
            <field name="view_mode">form</field>
            <field name="views"></field>
            <field name="target">inline</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                          (0, 0, {'view_mode': 'form', 'view_id': ref('restaurant_audit_view_inline_form')})]" />
        </record>

    </data>
</odoo>