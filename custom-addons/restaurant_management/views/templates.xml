                                        <select class="form-control mr-1" id="restaurant"
                                            name="restaurant" required="true">
                                            <t t-foreach="loading_level" t-as="level">
                                                <t t-if="level['id']=='low'">
                                                    <option t-attf-value="{{level['id']}}"
                                                        selected="true">
                                                        <t t-esc="level['value']" />
                                                    </option>
                                                </t>
                                                <t t-else="">
                                                    <option t-attf-value="{{level['id']}}">
                                                        <t t-esc="level['value']" />
                                                    </option>
                                                </t>

                                            </t>
                                        </select>
                                    </div>
