                                <div class="report-network-section__header">
                                    <h2>Ошибки</h2>
                                </div>
                                <div class="report-network-faults-taken-measures__faults">
                                    <field name="top_violations_data"
                                        widget="top_violations_list_widget" />
                                </div>
                            </div>

                            <div class="report-network-faults-taken-measures__content_right">
