<odoo>
    <data>
        <record id="fault_registry_view_form" model="ir.ui.view">
            <field name="name">fault_registry.view.form</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="arch" type="xml">
                <form string="fault_registry" duplicate="0">
                    <header>
                        <field name="available_for_edit" invisible="1" />
                        <field name="no_fault_check_list_category" invisible="1" />

                        <button name="cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ['cancel'])]}" />
                        <button name="confirm" type="object" string="Confirm" attrs="{'invisible': [('state', 'in', ['confirm'])]}" />
                        <field name="state" widget="statusbar" statusbar_visible="confirm" />
                    </header>
                    <sheet>
                        <group>
                            <field name="restaurant_id" />
                            <field name="restaurant_director_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="responsible_id" widget="many2one_avatar_user" />
                            <field name="fault_date" />
                        </group>
                        <group>
                            <field name="check_list_category_id" widget="selection" />
                            <field name="check_list_id" widget="selection" domain="[('category_id', '=', check_list_category_id)]" attrs="{'required': [('no_fault_check_list_category', '=', False)], 'invisible': [('no_fault_check_list_category', '=', True)], 'readonly': [('check_list_category_id', '=', False)]}" />
                            <field name="fault_type" />
                            <field name="guilty_person_id" />
                        </group>
                        <group>
                            <field name="severe" />
                        </group>
                        <group>
                            <field name="comment" widget="html" />
                        </group>
                        <group>
                            <field name="director_comment" widget="html" />
                        </group>
                        <group>
                            <field name="check_list_category_responsible_comment" widget="html" />
                        </group>
                        <group>
                            <field name="attachment_ids" widget="many2many_binary_preview" accepted_file_extensions="image/*" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fault_registry_view_form_group_restaurant_management_restaurant_director" model="ir.ui.view">
            <field name="name">fault_registry.view.form.group_restaurant_management_restaurant_director</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="inherit_id" ref="fault_registry_view_form" />
            <field name="groups_id" eval="[(6, 0, [ref('group_restaurant_management_restaurant_director')])]" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='cancel']" position="replace">
                    <button name="cancel" type="object" string="Cancel" invisible="1" />
                </xpath>
                <xpath expr="//button[@name='confirm']" position="replace">
                    <button name="confirm" type="object" string="Confirm" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='check_list_category_id']" position="replace">
                    <field name="check_list_category_id" widget="selection" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='check_list_id']" position="replace">
                    <field name="check_list_id" widget="selection" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='fault_type']" position="replace">
                    <field name="fault_type" attrs="{'readonly': [('available_for_edit', '=', False)]}" />
                </xpath>
                <xpath expr="//field[@name='guilty_person_id']" position="replace">
                    <field name="guilty_person_id" attrs="{'readonly': [('available_for_edit', '=', False)]}" />
                </xpath>
                <xpath expr="//field[@name='severe']" position="replace">
                    <field name="severe" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='comment']" position="replace">
                    <field name="comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='director_comment']" position="replace">
                    <field name="director_comment" attrs="{'readonly': [('available_for_edit', '=', False)]}" widget="html" />
                </xpath>
                <xpath expr="//field[@name='check_list_category_responsible_comment']" position="replace">
                    <field name="check_list_category_responsible_comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='attachment_ids']" position="replace">
                    <field name="attachment_ids" readonly="1" widget="many2many_binary_preview" accepted_file_extensions="image/*" />
                </xpath>
            </field>
        </record>

        <record id="fault_registry_view_form_group_restaurant_management_audit_controller" model="ir.ui.view">
            <field name="name">fault_registry.view.form.group_restaurant_management_audit_controller</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="inherit_id" ref="fault_registry_view_form" />
            <field name="groups_id" eval="[(6, 0, [ref('group_restaurant_management_audit_controller')])]" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='cancel']" position="replace">
                    <button name="cancel" type="object" string="Cancel" invisible="1" />
                </xpath>
                <xpath expr="//button[@name='confirm']" position="replace">
                    <button name="confirm" type="object" string="Confirm" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='check_list_category_id']" position="replace">
                    <field name="check_list_category_id" widget="selection" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='check_list_id']" position="replace">
                    <field name="check_list_id" widget="selection" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='fault_type']" position="replace">
                    <field name="fault_type" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='guilty_person_id']" position="replace">
                    <field name="guilty_person_id" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='severe']" position="replace">
                    <field name="severe" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='comment']" position="replace">
                    <field name="comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='director_comment']" position="replace">
                    <field name="director_comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='check_list_category_responsible_comment']" position="replace">
                    <field name="check_list_category_responsible_comment" attrs="{'readonly': [('available_for_edit', '=', False)]}" widget="html" />
                </xpath>
                <xpath expr="//field[@name='attachment_ids']" position="replace">
                    <field name="attachment_ids" readonly="1" widget="many2many_binary_preview" accepted_file_extensions="image/*" />
                </xpath>
            </field>
        </record>

        <record id="fault_registry_view_form_group_restaurant_management_dkk_manager" model="ir.ui.view">
            <field name="name">fault_registry.view.form.group_restaurant_management_dkk_manager</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="inherit_id" ref="fault_registry_view_form" />
            <field name="groups_id" eval="[(6, 0, [ref('group_restaurant_management_dkk_manager')])]" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='check_list_category_id']" position="replace">
                    <field name="check_list_category_id" widget="selection" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='check_list_id']" position="replace">
                    <field name="check_list_id" widget="selection" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='fault_type']" position="replace">
                    <field name="fault_type" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='guilty_person_id']" position="replace">
                    <field name="guilty_person_id" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='comment']" position="replace">
                    <field name="comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='check_list_category_responsible_comment']" position="replace">
                    <field name="check_list_category_responsible_comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='director_comment']" position="replace">
                    <field name="director_comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='attachment_ids']" position="replace">
                    <field name="attachment_ids" readonly="1" widget="many2many_binary_preview" accepted_file_extensions="image/*" />
                </xpath>
            </field>
        </record>

        <record id="fault_registry_view_form_group_restaurant_management_auditer" model="ir.ui.view">
            <field name="name">fault_registry.view.form.group_restaurant_management_auditer</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="inherit_id" ref="fault_registry_view_form" />
            <field name="groups_id" eval="[(6, 0, [ref('group_restaurant_management_auditer')])]" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='cancel']" position="replace">
                    <button name="cancel" type="object" string="Cancel" invisible="1" />
                </xpath>
                <xpath expr="//button[@name='confirm']" position="replace">
                    <button name="confirm" type="object" string="Confirm" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='check_list_category_id']" position="replace">
                    <field name="check_list_category_id" widget="selection" attrs="{'readonly': [('id', '!=', False)]}" />
                </xpath>
                <xpath expr="//field[@name='check_list_id']" position="replace">
                    <field name="check_list_id" widget="selection" domain="[('category_id', '=', check_list_category_id)]" attrs="{'required': [('no_fault_check_list_category', '=', False)], 'invisible': [('no_fault_check_list_category', '=', True)], 'readonly': ['|', ('check_list_category_id', '=', False), ('id', '!=', False)]}" />
                </xpath>
                <xpath expr="//field[@name='fault_type']" position="replace">
                    <field name="fault_type" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='guilty_person_id']" position="replace">
                    <field name="guilty_person_id" readonly="1" />
                </xpath>
                <xpath expr="//field[@name='comment']" position="replace">
                    <field name="comment" attrs="{'readonly': [('available_for_edit', '=', False)]}" widget="html" />
                </xpath>
                <xpath expr="//field[@name='director_comment']" position="replace">
                    <field name="director_comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='check_list_category_responsible_comment']" position="replace">
                    <field name="check_list_category_responsible_comment" readonly="1" widget="html" />
                </xpath>
                <xpath expr="//field[@name='attachment_ids']" position="replace">
                    <field name="attachment_ids" widget="many2many_binary_preview" accepted_file_extensions="image/*" />
                </xpath>
            </field>
        </record>

        <record id="fault_registry_tree_view" model="ir.ui.view">
            <field name="name">fault_registry.view.tree</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="restaurant_id" />
                    <field name="fault_date" />
                    <field name="check_list_category_id" />
                    <field name="responsible_id" widget="many2one_avatar_user" />
                    <field name="state" widget="badge" decoration-success="state == 'confirm'" decoration-muted="state == 'cancel'" />
                </tree>
            </field>
        </record>

        <record id="fault_registry_graph_view" model="ir.ui.view">
            <field name="name">fault_registry.view.graph</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="arch" type="xml">
                <graph string="Faults" type="line" sample="1">
                    <field name="fault_date" interval="day" />
                    <field name="restaurant_id" />
                </graph>
            </field>
        </record>

        <record id="fault_registry_view_pivot" model="ir.ui.view">
            <field name="name">restaurant_management.view.pivot</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="arch" type="xml">
                <pivot string="Faults" disable_linking="true">
                    <field name="fault_date" type="col" interval="day" />
                    <field name="restaurant_id" type="row" />
                </pivot>
            </field>
        </record>

        <record id="fault_registry_view_search" model="ir.ui.view">
            <field name="name">fault_registry.view.search</field>
            <field name="model">restaurant_management.fault_registry</field>
            <field name="arch" type="xml">
                <search string="Fault Registry">
                    <field name="restaurant_id" />
                    <field name="responsible_id" />
                    <field name="check_list_category_id" />
                    <field name="check_list_id" />
                    <field name="guilty_person_id" />

                    <separator />
                    <filter string="Confirm" name="confirm_state" domain="[('state', '=', 'confirm')]" />
                    <filter string="Cancel" name="cancel_state" domain="[('state', '=', 'cancel')]" />

                    <separator />
                    <filter string="Cook" name="cook_fault_type" domain="[('fault_type', '=', 'cook')]" />
                    <filter string="Suchif" name="suchif_fault_type" domain="[('fault_type', '=', 'suchif')]" />
                    <filter string="Waiter" name="waiter_fault_type" domain="[('fault_type', '=', 'waiter')]" />
                    <filter string="Tech Personal" name="tech_personal_fault_type" domain="[('fault_type', '=', 'tech_personal')]" />
                    <filter string="Barman" name="barman_fault_type" domain="[('fault_type', '=', 'barman')]" />
                    <filter string="Delivery" name="delivery_fault_type" domain="[('fault_type', '=', 'delivery')]" />

                    <separator />
                    <filter string="Severe Faults" name="severe_faults" domain="[('severe', '=', True)]" />
                    <filter string="None Severe Faults" name="none_severe_faults" domain="[('severe', '=', False)]" />

                    <group expand="0" string="Group By">
                        <filter string="Restaurant" name="group_by_restaurant_id" context="{'group_by': 'restaurant_id'}" domain="[]" />
                        <filter string="Responsible" name="group_by_responsible_id" context="{'group_by': 'responsible_id'}" domain="[]" />
                        <filter string="Fault Date" name="group_by_fault_date" context="{'group_by': 'fault_date:month'}" domain="[]" />
                        <filter string="Check List Category" name="group_by_check_list_category_id" context="{'group_by': 'check_list_category_id'}" domain="[]" />
                        <filter string="Check List" name="group_by_check_list_id" context="{'group_by': 'check_list_id'}" domain="[]" />
                        <filter string="Guilty Person" name="group_by_guilty_person_id" context="{'group_by': 'guilty_person_id'}" domain="[]" />
                        <filter string="State" name="group_by_state" context="{'group_by': 'state'}" domain="[]" />
                        <filter string="Fault Type" name="group_by_fault_type" context="{'group_by': 'fault_type'}" domain="[]" />
                        <filter string="Severe" name="group_by_severe" context="{'group_by': 'severe'}" domain="[]" />
                    </group>

                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record id="fault_registry_action" model="ir.actions.act_window">
            <field name="name">Fault Registry</field>
            <field name="res_model">restaurant_management.fault_registry</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="target">current</field>
        </record>

        <record id="registered_faults_per_restaurant_graphs_report_action" model="ir.actions.act_window">
            <field name="name">Fault Registry Reporting</field>
            <field name="res_model">restaurant_management.fault_registry</field>
            <field name="view_mode">graph,pivot</field>
            <field name="target">current</field>
        </record>

        <record id="registered_grouped_faults_action" model="ir.actions.act_window">
            <field name="name">Fault Registry Reporting</field>
            <field name="res_model">restaurant_management.fault_registry</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_fault_date': 1, 'search_default_group_by_check_list_category_id': 1}</field>
            <field name="target">current</field>
        </record>

    </data>
</odoo>