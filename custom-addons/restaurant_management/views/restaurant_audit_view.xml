<odoo>
    <data>
        <record id="restaurant_audit_view_form" model="ir.ui.view">
            <field name="name">restaurant_audit.view.form</field>
            <field name="model">restaurant_management.restaurant_audit</field>
            <field name="arch" type="xml">
                <form string="Audit of Expert DKK" duplicate="0">
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="restaurant_id" required="1" widget="selection" />
                            <field name="restaurant_director_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="responsible_id" required="1" widget="many2one_avatar_user" />
                        </group>
                    </group>
                    <group string="Check date and time">
                        <field name="audit_date" />
                        <field name="audit_start_time" widget="float_time" />
                        <field name="audit_end_time" widget="float_time" />
                    </group>
                    <group string="Faults">
                        <field name="fault_registry_ids" nolabel="1" context="{'default_restaurant_id': restaurant_id, 'default_responsible_id': responsible_id}">
                            <tree>
                                <field name="id" invisible="1" />
                                <field name="responsible_id" invisible="1" />
                                <field name="restaurant_id" invisible="1" />
                                <field name="check_list_category_id" attrs="{'readonly': [('id', '!=', False)]}" force_save="1" />
                                <field name="check_list_id" domain="[('category_id', '=', check_list_category_id)]" attrs="{'readonly': [('id', '!=', False)]}" force_save="1" style="word-break: break-word; white-space: normal;" />
                                <field name="state" widget="badge" decoration-success="state == 'confirm'" decoration-muted="state == 'cancel'" />
                            </tree>
                            <form>
                                <header>
                                    <field name="no_fault_check_list_category" invisible="1" />

                                    <button name="cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ['cancel'])]}" />
                                    <button name="confirm" type="object" string="Confirm" attrs="{'invisible': [('state', 'in', ['confirm'])]}" />
                                    <field name="state" widget="statusbar" statusbar_visible="confirm" />
                                </header>
                                <sheet>
                                    <group>
                                        <field name="check_list_category_id" widget="selection" />
                                    </group>
                                    <group>
                                        <field name="check_list_id" widget="selection" domain="[('category_id', '=', check_list_category_id)]" attrs="{'required': [('no_fault_check_list_category', '=', False)], 'invisible': [('no_fault_check_list_category', '=', True)], 'readonly': [('check_list_category_id', '=', False)]}" />
                                        <field name="fault_type" />
                                        <field name="guilty_person_id" />
                                    </group>
                                    <group>
                                        <field name="severe" />
                                    </group>
                                    <group>
                                        <field name="comment" />
                                    </group>
                                    <group>
                                        <field name="director_comment" />
                                    </group>
                                    <group>
                                        <field name="check_list_category_responsible_comment" />
                                    </group>
                                    <group>
                                        <field name="attachment_ids" widget="many2many_binary_preview" accepted_file_extensions="image/*" />
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </form>
            </field>
        </record>

